<?xml version="1.0" encoding="utf-8" ?>
<pages:MauiPage
    x:Class="BlazorApp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Microsoft.AspNetCore.Components.WebView.Maui;assembly=Microsoft.AspNetCore.Components.WebView.Maui"
    xmlns:core="clr-namespace:WeeklyXamarin.Core;assembly=WeeklyXamarin.Core"
    xmlns:local="clr-namespace:BlazorApp.ViewModels"
    xmlns:pages="clr-namespace:BlazorApp.Views"
    Title="{Binding Title}"
    local:ViewModelLocator.AutoWireViewModel="True"
    x:DataType="local:MainViewModel">
    <ContentPage.Content>
        <b:BlazorWebView HostPage="wwwroot/index.html">
            <b:BlazorWebView.RootComponents>
                <b:RootComponent ComponentType="{x:Type core:Main}" Selector="#app" />
            </b:BlazorWebView.RootComponents>
        </b:BlazorWebView>
    </ContentPage.Content>
</pages:MauiPage>